events {}

http {
  server {
    listen {{nginx_listen_port}};
    server_name {{nginx_server_name}};

    client_max_body_size {{nginx_body_size}};
    ssl on;
    ssl_certificate {{nginx_ssl_cert_location}};
    ssl_certificate_key {{nginx_ssl_key_location}};
    
    location / {
      proxy_pass {{nginx_proxy_location}};
    }
  }
}
